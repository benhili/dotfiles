# .zshrc
autoload -U promptinit; promptinit
prompt pure

# Î» in case the emoji gets obnoxious
PURE_PROMPT_SYMBOL="Î»"

# FD to escape vim insert mode
bindkey -M viins 'fd' vi-cmd-mode

# Required for Ranger
export EDITOR="nvim"

